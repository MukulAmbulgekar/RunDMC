    <xs:annotation>
      <xs:documentation>
        Whether or not SSLv3 is allowed for XDQP.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>true()</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
