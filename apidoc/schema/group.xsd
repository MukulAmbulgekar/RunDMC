<xs:schema targetNamespace="http://marklogic.com/xdmp/group"
 xsi:schemaLocation="http://www.w3.org/2001/XMLSchema XMLSchema.xsd
                     http://marklogic.com/xdmp/admin admin.xsd
                     http://www.w3.org/1999/xhtml xhtml-inlstyle-1.xsd"
 xmlns="http://marklogic.com/xdmp/group"
 xmlns:admin="http://marklogic.com/xdmp/admin"
 xmlns:xs="http://www.w3.org/2001/XMLSchema"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:xhtml="http://www.w3.org/1999/xhtml">

  <?xdmp-annotations?>

  <xs:annotation>
    <xs:documentation>
      Server configuration file schema.
    </xs:documentation>
    <xs:appinfo>
    </xs:appinfo>
  </xs:annotation>

  <xs:simpleType name="licensee">
    <xs:annotation>
      <xs:documentation>
        A licensee name.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <xs:element name="licensee" type="licensee">
    <xs:annotation>
      <xs:documentation>
        The licensee.
      </xs:documentation>
      <xs:appinfo>
        <admin:hidden>true</admin:hidden>
        <admin:default>""</admin:default>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="license-key">
    <xs:annotation>
      <xs:documentation>
        A license key.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <xs:element name="license-key" type="license-key">
    <xs:annotation>
      <xs:documentation>
        The license key for this host.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>""</admin:default>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="accepted-version">
    <xs:annotation>
      <xs:documentation>
        An accepted version.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <xs:element name="accepted-version" type="accepted-version">
    <xs:annotation>
      <xs:documentation>
        The last accepted version.
      </xs:documentation>
      <xs:appinfo>
        <admin:hidden>true</admin:hidden>
        <admin:default>""</admin:default>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="accepted-agreement">
    <xs:annotation>
      <xs:documentation>
        An accepted agreement.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <xs:element name="accepted-agreement" type="accepted-agreement">
    <xs:annotation>
      <xs:documentation>
        The last accepted agreement.
      </xs:documentation>
      <xs:appinfo>
        <admin:hidden>true</admin:hidden>
        <admin:default>""</admin:default>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="accepted-licensee">
    <xs:annotation>
      <xs:documentation>
        An accepted licensee.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <xs:element name="accepted-licensee" type="accepted-licensee">
    <xs:annotation>
      <xs:documentation>
        The last accepted licensee.
      </xs:documentation>
      <xs:appinfo>
        <admin:hidden>true</admin:hidden>
        <admin:default>""</admin:default>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="ssl-private-key" >
    <xs:annotation>
      <xs:documentation>
        A PEM encoded private key.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <xs:element name="ssl-private-key" type="ssl-private-key">
    <xs:annotation>
      <xs:documentation>
        Ths host's PEM encoded private key.
      </xs:documentation>
      <xs:appinfo>
        <admin:hidden>true</admin:hidden>
        <admin:default>""</admin:default>
      </xs:appinfo>

    </xs:annotation>
  </xs:element>

  <xs:simpleType name="read-size">
    <xs:annotation>
      <xs:documentation>
        An integer amount for block sizes in kilobytes, min 8, max 16384.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:unsignedInt">
      <xs:minInclusive value="8"/>
      <xs:maxInclusive value="16384"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="memory-size">
    <xs:annotation>
      <xs:documentation>
        An integer amount of system memory in megabytes, min 1, max 32768.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:unsignedInt">
      <xs:minInclusive value="1"/>
      <xs:maxInclusive value="32768"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="list-cache-size" type="memory-size">
    <xs:annotation>
      <xs:documentation>
        The size of the list cache, in megabytes.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:list-cache-size()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">list cache
          size</span> specifies the amount of memory to dedicate to caching
          termlist data for all on-disk stands.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="compressed-tree-cache-size" type="memory-size">
    <xs:annotation>
      <xs:documentation>
        The size of the compressed tree cache, in megabytes.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:compressed-tree-cache-size()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">compressed tree
          cache size</span> specifies the amount of memory to dedicate to
          caching tree data in compressed form for all on-disk
          stands.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="expanded-tree-cache-size" type="memory-size">
    <xs:annotation>
      <xs:documentation>
        The size of the expanded tree cache, in megabytes.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:expanded-tree-cache-size()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">expanded tree
          cache size</span> specifies the amount of memory to dedicate to
          caching tree data in expanded form for the query
          evaluator.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="compressed-tree-read-size" type="read-size">
    <xs:annotation>
      <xs:documentation>
        The block size for random-access compressed tree file reads, in kilobytes.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>32</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">compressed tree
	read size</span> specifies the size of the block for random access
	when reading compressed tree files.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="memory-partitions">
    <xs:annotation>
      <xs:documentation>
        An integer number of memory partitions, min 1, max 16.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:unsignedInt">
      <xs:minInclusive value="1"/>
      <xs:maxInclusive value="16"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="list-cache-partitions" type="memory-partitions">
    <xs:annotation>
      <xs:documentation>
        The number of list cache partitions.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:list-cache-partitions()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">list
          cache partitions</span> specifies the number of independent
          list cache partitions to allocate.
          More partitions allow more concurrency, but make each individual
          cache partition smaller, which could make it more likely for the
          cache to fill up. The default is determined based on the amount
          of memory on your system and on the number of cores (the number
	  of CPUs times the number of cores per CPU) in the system, and
	  should work well for most installations.  If you
	  see a lot of CPU under-utilization under heavy concurrent query
	  loads, then raising this value can improve performance.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="compressed-tree-cache-partitions" type="memory-partitions">
    <xs:annotation>
      <xs:documentation>
        The number of compressed tree cache partitions.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:compressed-tree-cache-partitions()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">compressed tree
          cache partitions</span> specifies the number of independent
          compressed tree cache partitions to allocate.
          More partitions allow more concurrency, but make each individual
          cache partition smaller, which could make it more likely for the
          cache to fill up. The default is determined based on the amount
          of memory on your system and on the number of cores (the number
	  of CPUs times the number of cores per CPU) in the system, and
	  should work well for most installations.  If you
	  see a lot of CPU under-utilization under heavy concurrent query
	  loads, then raising this value can improve performance.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="expanded-tree-cache-partitions" type="memory-partitions">
    <xs:annotation>
      <xs:documentation>
        The number of expanded tree cache partitions.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:expanded-tree-cache-partitions()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">expanded tree
          cache partitions</span> specifies the number of independent
          expanded tree cache partitions to allocate.
          More partitions allow more concurrency, but make each individual
          cache partition smaller, which could make it more likely for the
          cache to fill up. The default is determined based on the amount
          of memory on your system and on the number of cores (the number
	  of CPUs times the number of cores per CPU) in the system, and
	  should work well for most installations.  If you
	  see a lot of CPU under-utilization under heavy concurrent query
	  loads, then raising this value can improve performance.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="triple-cache-size" type="memory-size">
    <xs:annotation>
      <xs:documentation>
        The size of the triple cache, in megabytes.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:triple-cache-size()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">triple cache
          size</span> specifies the amount of memory to dedicate to caching
          triple data for all on-disk stands.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="triple-cache-partitions" type="memory-partitions">
    <xs:annotation>
      <xs:documentation>
        The number of triple cache partitions.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:triple-cache-partitions()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">triple
          cache partitions</span> specifies the number of independent
          triple cache partitions to allocate.
          More partitions allow more concurrency, but make each individual
          cache partition smaller, which could make it more likely for the
          cache to fill up. The default is determined based on the amount
          of memory on your system and on the number of cores (the number
	  of CPUs times the number of cores per CPU) in the system, and
	  should work well for most installations.  If you
	  see a lot of CPU under-utilization under heavy concurrent query
	  loads, then raising this value can improve performance.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="triple-value-cache-size" type="memory-size">
    <xs:annotation>
      <xs:documentation>
        The size of the triple value cache, in megabytes.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:triple-value-cache-size()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">triple value cache
          size</span> specifies the amount of memory to dedicate to caching
          triple value data for all on-disk stands.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="triple-value-cache-partitions" type="memory-partitions">
    <xs:annotation>
      <xs:documentation>
        The number of triple value cache partitions.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:triple-value-cache-partitions()</admin:default>
        <admin:cold/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">triple value
          cache partitions</span> specifies the number of independent
          triple value cache partitions to allocate.
          More partitions allow more concurrency, but make each individual
          cache partition smaller, which could make it more likely for the
          cache to fill up. The default is determined based on the amount
          of memory on your system and on the number of cores (the number
	  of CPUs times the number of cores per CPU) in the system, and
	  should work well for most installations.  If you
	  see a lot of CPU under-utilization under heavy concurrent query
	  loads, then raising this value can improve performance.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="hostname">
    <xs:annotation>
      <xs:documentation>
        A hostname.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:token">
      <xs:minLength value="1"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="smtp-relay" type="hostname">
    <xs:annotation>
      <xs:documentation>
        The name of the SMTP mail relay host.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>xdmp:smtp-relay()</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">smtp relay</span>
          specifies the hostname of the SMTP server.  This server is used for
          all SMTP requests issued through the <code>xdmp:email</code>
          built-in function.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="email-address">
    <xs:annotation>
      <xs:documentation>
        An internet email address.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:token">
      <xs:minLength value="1"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="email-address" type="email-address">
    <xs:annotation>
      <xs:documentation>
        The email address of the system administrator.
      </xs:documentation>
      <xs:appinfo>
        <admin:hidden>true</admin:hidden>
        <admin:default>xdmp:email-address()</admin:default>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="smtp-timeout" type="timeout">
    <xs:annotation>
      <xs:documentation>
        The SMTP response timeout, in seconds.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>60</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">smtp timeout</span>
          specifies the time, in seconds, before
          an SMTP request times out and issues an error. </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="http-timeout" type="timeout">
    <xs:annotation>
      <xs:documentation>
        The HTTP response timeout, in seconds.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>60</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">http timeout</span>
          specifies the time, in seconds, before an HTTP request times
          out. </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="xdqp-timeout" type="timeout">
    <xs:annotation>
      <xs:documentation>
        The XDQP protocol timeout, in seconds.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>10</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">xdqp timeout</span>
          specifies the time, in seconds, before a request between a
          MarkLogic Server evaluator node (the node from which the query is
          issued) and a MarkLogic Server data node (the node from which
          the forest data is retrieved) times out.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="host-timeout" type="timeout">
    <xs:annotation>
      <xs:documentation>
        The host response timeout, in seconds.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>30</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">host timeout</span>
          specifies the time, in seconds, before a MarkLogic Server
          host-to-host request times out.  The host-to-host requests
          are used for communication between nodes in a MarkLogic Server
          cluster.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="host-initial-timeout" type="timeout">
    <xs:annotation>
      <xs:documentation>
        The host initial response timeout, in seconds.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>240</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">host
          initial timeout</span> specifies the time, in seconds, that an
          instance of MarkLogic Server will wait for another node to come
          online when the cluster first starts up before deciding that the
          node is down, and initiating failover for any forests that are
          assigned to that offline host.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="retry-timeout" type="timeout">
    <xs:annotation>
      <xs:documentation>
        The request retry timeout, in seconds.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>180</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">retry timeout</span>
          specifies the time, in seconds, before a MarkLogic Server
          stops retrying a request.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="module-cache-timeout" type="timeout">
    <xs:annotation>
      <xs:documentation>
        Flush from caches modules unused after this many seconds.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>300</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">module cache
          timeout</span> specifies the time, in seconds, that a cached
          module can be unused before being flushed from the cache.
          Larger values can potentially cause more memory to be used
          for cached modules.
          Smaller values can potentially cause more time to be used
          reloading uncached modules.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="triple-cache-timeout" type="timeout">
    <xs:annotation>
      <xs:documentation>
        The number of seconds of inactivity before triple index pages are
        eligable to be flushed from the cache.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>300</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">triple cache
          timeout</span> specifies the time, in seconds, that a cached
          triple index page can be unused before being eligable to be flushed
          from the cache.
          Larger values can potentially cause more memory to be used
          for by the triple cache.
          Smaller values can potentially cause more time to be used
          reloading triple index pages.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="triple-value-cache-timeout" type="timeout">
    <xs:annotation>
      <xs:documentation>
        The number of seconds of inactivity before triple value index pages are
        eligable to be flushed from the cache.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>300</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">triple value cache
          timeout</span> specifies the time, in seconds, that a cached
          triple value index page can be unused before being eligable to be
          flushed from the cache.
          Larger values can potentially cause more memory to be used
          for by the triple value cache.
          Smaller values can potentially cause more time to be used
          reloading triple value index pages.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="http-user-agent">
    <xs:annotation>
      <xs:documentation>
        An HTTP User-agent string.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <xs:element name="http-user-agent" type="http-user-agent">
    <xs:annotation>
      <xs:documentation>
        The HTTP User-agent string used
        when making HTTP requests.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>"MarkLogic Server"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">http user
          agent</span> specifies the User-agent string issued when making
          HTTP requests from an App Server in the group. </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="log-level">
    <xs:annotation>
      <xs:documentation>
	emergency, alert, critical, error, warning, notice, info,
	config, debug, fine, finer, or finest
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:NMTOKEN">
      <xs:enumeration value="finest"/>
      <xs:enumeration value="finer"/>
      <xs:enumeration value="fine"/>
      <xs:enumeration value="debug"/>
      <xs:enumeration value="config"/>
      <xs:enumeration value="info"/>
      <xs:enumeration value="notice"/>
      <xs:enumeration value="warning"/>
      <xs:enumeration value="error"/>
      <xs:enumeration value="critical"/>
      <xs:enumeration value="alert"/>
      <xs:enumeration value="emergency"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="file-log-level" type="log-level">
    <xs:annotation>
      <xs:documentation>
        The minimum log level for log messages in the log file.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>"info"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
          <span class="help-text"><span style="color:#800000">file log
          level</span> specifies the minimum log level for log messages
          sent to the MarkLogic Server log file (<code>ErrorLog.txt</code>).
          </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="system-log-level" type="log-level">
    <xs:annotation>
      <xs:documentation>
        The minimum log level for log messages sent to the operating system.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>"notice"</admin:default>
