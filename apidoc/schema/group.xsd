      <xs:element ref="roles" minOccurs="0"/>
      <xs:element ref="blackout-type" minOccurs="0"/>
      <xs:element ref="days" minOccurs="0"/>
      <xs:element ref="period"/>
    </xs:all>
  </xs:complexType>

  <xs:element name="request-blackout" type="request-blackout">
    <xs:annotation>
      <xs:documentation>
        A request blackout specification.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="request-blackouts">
    <xs:annotation>
      <xs:documentation>
        Users, roles, orperiods for request blackouts.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="request-blackout"/>
    </xs:choice>
  </xs:complexType>

  <xs:element name="request-blackouts" type="request-blackouts">
    <xs:annotation>
      <xs:documentation>
        Users, roles, or periods during which requests will
        be denied.
      </xs:documentation>
      <xs:appinfo>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
           <hr class="control-line" size="1"/><br/>
           <span class="help-text">
           <img src="images/varspace.gif" alt="" width="20" height="1"
           />Request Blackout Configuration Help<br/><br/>
           </span>
           <hr class="control-line" size="1"/>
           <span class="help-text"><span style="color:#800000">Request blackouts
           </span> allow you to specify users, roles, time periods, a
	   combination of the three when requests will be denied.
           To specify a request blackout period, click the
           <span style="color:#800000">
           Create</span> tab and specify when you want the blackout to occur.
           </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="user-id">
    <xs:annotation>
      <xs:documentation>
        A user ID.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:unsignedLong">
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="user" type="user-id">
    <xs:annotation>
      <xs:documentation>
        The user unique ID.
      </xs:documentation>
      <xs:appinfo>
        <admin:select>default-user</admin:select>
        <admin:default>
    xquery version "1.0-ml";
    import module "http://marklogic.com/xdmp/security" at "/MarkLogic/security.xqy";
	  if(empty(sec:uid-for-name("nobody"))) then
	    0
	  else
	    sec:uid-for-name("nobody")
	</admin:default>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-user" type="user-id">
    <xs:annotation>
      <xs:documentation>
        The user to run this task as.
      </xs:documentation>
      <xs:appinfo>
        <admin:select>default-user</admin:select>
        <admin:default>
    xquery version "1.0-ml";
    import module "http://marklogic.com/xdmp/security" at "/MarkLogic/security.xqy";
	  if(empty(sec:uid-for-name("nobody"))) then
	    0
	  else
	    sec:uid-for-name("nobody")
     </admin:default>
      <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">task user</span>
	specifies the user with permission to invoke the module.</span>
      </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-host" type="host-id">
    <xs:annotation>
      <xs:documentation>
        The host to run this task on.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>0</admin:default>
	<admin:optional>true</admin:optional>
	<admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">task host</span>
	specifies the host computer on which the scheduled module is to be invoked.</span>
      </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-modules" type="database-id">
    <xs:annotation>
      <xs:documentation>
        The database that contains application modules.
      </xs:documentation>
      <xs:appinfo>
        <admin:select>database</admin:select>
        <admin:default>0</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">task modules</span>
        specifies the name of the database in which the scheduled module locates
        XQuery application code. If set to (file system), then any files in the
        specified <span style="color:#800000">task root</span> directory are
        executable (given the proper permissions). If set to a database,
        then any documents in the database whose URI begins with the specified
	<span style="color:#800000">task root</span> directory are executable.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-database" type="database-id">
    <xs:annotation>
      <xs:documentation>
        The database name.
      </xs:documentation>
      <xs:appinfo>
        <admin:select>database</admin:select>
        <admin:default>0</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">task database</span>
        specifies the database to which the scheduled module connects for query
        execution.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-root" type="directory-pathname">
    <xs:annotation>
      <xs:documentation>
        The path to the module directory root.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>""</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
          <span class="help-text"><span style="color:#800000">task root</span>
	  specifies the root directory (filesystem) or URI root (database)
          that contains the module.
          </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-path" type="task-path">
    <xs:annotation>
      <xs:documentation>
  	The module to invoke.
      </xs:documentation>
      <xs:appinfo>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">task path</span>
	specifies the module to invoke. The task path must begin with a forward
	slash (/) and cannot contain a question mark '?', colon ':' or
	pound '#' character.</span>
        </admin:help>	
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="task-path">
    <xs:annotation>
      <xs:documentation>
        A task-path must start with a "/".
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:pattern value="/[^\?:#]*"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="task-type">
    <xs:restriction base="xs:NMTOKEN">
      <xs:enumeration value="once"/>
      <xs:enumeration value="monthly"/>
      <xs:enumeration value="weekly"/>
      <xs:enumeration value="daily"/>
      <xs:enumeration value="hourly"/>
      <xs:enumeration value="minutely"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="task-type" type="task-type">
    <xs:annotation>
      <xs:documentation>
        What type of scheduled task is this.
      </xs:documentation>
      <xs:appinfo>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">task type</span>
	specifies the task type:
         <ul>
	 <li><span class="help-text"><span style="color:#800000">minutely</span>
         specifies how many minutes between each invocation of the module. </span></li>
	 <li><span class="help-text"><span style="color:#800000">hourly</span>
	 specifies how many hours and minutes between each invocation of the module.
         </span></li>
	 <li><span class="help-text"><span style="color:#800000">daily</span>
	 specifies how many days between each invocation of the module and the time of day
	 (in 24:00 notation).
         </span></li>
	 <li><span class="help-text"><span style="color:#800000">weekly</span>
	 specifies how many weeks between each invocation of the module, check one or
	 more days of the week, and the time of day (in 24:00 notation) for the
	 task to start.
         </span></li>
	 <li><span class="help-text"><span style="color:#800000">monthly</span>
	 specifies how many months between each invocation of the module, select one day
	 of the month (1-31), and the time of day (in 24:00 notation) for the task to start.
         </span></li>
	 <li><span class="help-text"><span style="color:#800000">one-time</span>
	 specifies the start date in MM/DD/YYYY notation (for example, 07/29/2009
         for July 29, 2009) and time in 24:00 notation.
	 </span></li>
         </ul>	
	</span>
        </admin:help>

      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="task-period">
    <xs:restriction base="xs:positiveInteger"/>
  </xs:simpleType>

  <xs:element name="task-period" type="task-period">
    <xs:annotation>
      <xs:documentation>
        How often this task should run (every n months, weeks, days, hours or minutes).
      </xs:documentation>
      <xs:appinfo>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">task period</span>
		specifies how often the module is to be invoked (every n
		months, weeks, days, hours, or minutes).</span>
        </admin:help>
        <admin:optional>true</admin:optional>
        <admin:default>1</admin:default>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="task-priority">
    <xs:restriction base="xs:NMTOKEN">
      <xs:enumeration value="normal"/>
      <xs:enumeration value="higher"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="task-priority" type="task-priority">
    <xs:annotation>
      <xs:documentation>
        The priority of this task.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>"normal"</admin:default>
	<admin:optional>true</admin:optional>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">task priority</span>
	specifies the priority of the task:
         <ul>
	 <li><span class="help-text"><span style="color:#800000">normal</span>
	 specifies the task should be queued with normal priority.
         </span></li>
	 <li><span class="help-text"><span style="color:#800000">higher</span>
	 specifies the task should be queued with higher priority.
         </span></li>
         </ul>	
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-day" type="day">
    <xs:annotation>
      <xs:documentation>
        A day that this task runs on.
      </xs:documentation>
      <xs:appinfo>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="task-days">
    <xs:annotation>
      <xs:documentation>
        A selection of days.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:choice minOccurs="0" maxOccurs="7">
      <xs:element ref="task-day"/>
    </xs:choice>
  </xs:complexType>

  <xs:element name="task-days" type="task-days">
    <xs:annotation>
      <xs:documentation>
        The days that this task runs on.
      </xs:documentation>
      <xs:appinfo>
      <admin:help xmlns="http://www.w3.org/1999/xhtml">
	<span class="help-text"><span style="color:#800000">task days</span>
	specifies the days on which this task runs.</span>
        </admin:help>
        <admin:optional>true</admin:optional>
        <admin:default/>        
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-month-day" type="task-month-day">
    <xs:annotation>
      <xs:documentation>
        The day of the month that this task runs on.
      </xs:documentation>
      <xs:appinfo>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">	
        </admin:help>
        <admin:optional>true</admin:optional>
        <admin:default/>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="task-month-day">
    <xs:restriction base="xs:positiveInteger">
      <xs:minInclusive value="1"/>
      <xs:maxInclusive value="31"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="task-start-date" type="start-date">
    <xs:annotation>
      <xs:documentation>
        The starting date (in MM/DD/YYYY notation) for this task.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:default/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-start-time" type="start-time">
    <xs:annotation>
      <xs:documentation>
	The starting time (in 24:00 notation) for this task.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:default/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
	<span class="help-text"><span style="color:#800000">task
	start time</span>
	specifies the  starting time (in 24:00 notation) for this task.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="task-timestamp" type="task-timestamp">
    <xs:annotation>
      <xs:documentation>
        The date and time this task was created.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:default/>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="task-timestamp">
    <xs:restriction base="xs:dateTime">
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="scheduled-task">
    <xs:annotation>
      <xs:documentation>
        A scheduled task specification.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:all>
      <xs:element ref="task-path"/>
      <xs:element ref="task-root"/>
      <xs:element ref="task-type"/>
      <xs:element ref="task-period" minOccurs="0"/>
      <xs:element ref="task-month-day" minOccurs="0"/>
      <xs:element ref="task-days" minOccurs="0"/>
      <xs:element ref="task-start-date" minOccurs="0"/>
      <xs:element ref="task-start-time" minOccurs="0"/>
      <xs:element ref="task-timestamp" minOccurs="0"/>
      <xs:element ref="task-database"/>	
      <xs:element ref="task-modules"/>
      <xs:element ref="task-user"/>
      <xs:element ref="task-host" minOccurs="0"/>
      <xs:element ref="task-priority" minOccurs="0"/>
    </xs:all>
  </xs:complexType>

  <xs:element name="scheduled-task" type="scheduled-task">
    <xs:annotation>
      <xs:documentation>
        A scheduled task specification.
      </xs:documentation>
      <xs:appinfo>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
           <hr class="control-line" size="1"/><br/>
           <span class="help-text">
           <img src="images/varspace.gif" alt="" width="20" height="1"
           />Scheduled Tasks Configuration Help<br/><br/>
           </span>
           <hr class="control-line" size="1"/>
           <span class="help-text"><span style="color:#800000">Scheduled Tasks
           </span> allow you to configure an XQuery main module to be run
           at some point in the future.
           The task can either be one time or recurring.
           To create a scheduled task, click the
           <span style="color:#800000">
	   Create</span> tab and specify when and how often you want the task
	   to be scheduled.
           </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="scheduled-tasks">
    <xs:annotation>
      <xs:documentation>
        The scheduled tasks' specification.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="scheduled-task"/>
    </xs:choice>
  </xs:complexType>

  <xs:element name="scheduled-tasks" type="scheduled-tasks">
    <xs:annotation>
      <xs:documentation>
        The scheduled tasks' specifications.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="output-method">
    <xs:annotation>
      <xs:documentation>
        Per 'method' attribute from xsl:output, one of: "xml", "xhtml", "html", or "text".
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:NMTOKEN">
      <xs:enumeration value="default"/>
      <xs:enumeration value="xml"/>
      <xs:enumeration value="xhtml"/>
      <xs:enumeration value="html"/>
      <xs:enumeration value="text"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="output-method" type="output-method">
    <xs:annotation>
      <xs:documentation>
      Output method.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-method</admin:select>
        <admin:default>"default"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
          <span class="help-text">
	  <span style="color:#800000">output-method</span>
           Valid values are <code>xml</code>, <code>html</code>,
           <code>xhtml</code>, and <code>text</code>. This is like the
           "method" option of both the XSLT <a
           href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
           instruction and the MarkLogic XQuery
           <code>xdmp:output</code> prolog statement.
          </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="yes-or-no">
    <xs:annotation>
      <xs:documentation>
       Nullable Boolean type accepting values "yes", "no", and "default".
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:NMTOKEN">
      <xs:enumeration value="yes"/>
      <xs:enumeration value="no"/>
      <xs:enumeration value="default"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="output-byte-order-mark" type="yes-or-no">
    <xs:annotation>
      <xs:documentation>
       The output sequence of octets is to be preceded by a Byte Order Mark.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-byte-order-mark</admin:select>
        <admin:default>"default"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-byte-order-mark</span>
         Valid values are <code>yes</code> or <code>no</code>.  This
         is like the "byte-order-mark" option of both the XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="output-cdata-section-namespace-uri">
    <xs:annotation>
      <xs:documentation>
        A namespace URI string.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:anyURI"/>
  </xs:simpleType>

  <xs:element name="output-cdata-section-namespace-uri" type="output-cdata-section-namespace-uri">
    <xs:annotation>
      <xs:documentation>
      Namespace URI of the "cdata section localname" specified below.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:default>""</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
        <span style="color:#800000">output-cdata-section-namespace-uri</span>
        is used in conjunction with output-cdata-section-localname; it is a namespace URI in which elements whose text contents should be output as CDATA sections may be specified.  You can only configure CDATA sections in one namespace at the level of server defaults.
        </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="output-cdata-section-localname">
    <xs:annotation>
      <xs:documentation>
       A list of element localname strings
      </xs:documentation>
    </xs:annotation>
    <xs:list itemType="xs:string"/>
  </xs:simpleType>

  <xs:element name="output-cdata-section-localname" type="output-cdata-section-localname">
    <xs:annotation>
      <xs:documentation>
      Element localname or list of element localnames to be output as CDATA sections.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:default>""</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-cdata-section-localname</span>
        is an element or list of elements to be output as CDATA sections: a space-separated sequence of name strings (without namespace qualifiers) of elements defined in the "cdata section namespace uri" specified above.  This corresponds to
	  the "cdata-section-elements" option of both the XSLT <a
	  href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
	  instruction and the MarkLogic XQuery
	  <code>xdmp:output</code> prolog statement.  You can only configure CDATA sections in one namespace at the level of server defaults.
        </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="output-doctype-public">
    <xs:annotation>
      <xs:documentation>
        A public DOCTYPE string.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:anyURI"/>
  </xs:simpleType>

  <xs:element name="output-doctype-public" type="output-doctype-public">
    <xs:annotation>
      <xs:documentation>
      A public identifier to use on the emitted DOCTYPE.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:default>""</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
        <span style="color:#800000">output-doctype-public</span>
         A public identifier, which is the public identifier to use on
         the emitted DOCTYPE.  This is like the "doctype-public"
         option of both the XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
        </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="output-doctype-system">
    <xs:annotation>
      <xs:documentation>
        A system DOCTYPE string.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:anyURI"/>
  </xs:simpleType>

  <xs:element name="output-doctype-system" type="output-doctype-system">
    <xs:annotation>
      <xs:documentation>
      A system identifier to use on the emitted DOCTYPE.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:default>""</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-doctype-system</span>
         A system identifier, which is the system identifier to use on
         the emitted DOCTYPE.  This is like the "doctype-system"
         option of both the XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
        </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="output-escape-uri-attributes" type="yes-or-no">
    <xs:annotation>
      <xs:documentation>
      Apply Unicode normalization, percent-encoding, and HTML escaping to serialized URI attributes.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-escape-uri-attributes</admin:select>
        <admin:default>"default"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-escape-uri-attributes</span>
         Valid values are <code>yes</code> or <code>no</code>.  This
         is like the "escape-uri-attributes" option of both the XSLT
         <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
        </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="output-include-content-type" type="yes-or-no">
    <xs:annotation>
      <xs:documentation>
      Include the content-type declaration when serializing the node.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-include-content-type</admin:select>
        <admin:default>"default"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-include-content-type</span>
         Include the content-type declaration when serializing the
         node.  Valid values are <code>yes</code> or <code>no</code>.
         This is like the "include-content-type" option of both the
         XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
        </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="output-indent" type="yes-or-no">
    <xs:annotation>
      <xs:documentation>
      Pretty-print typed XML (that is, XML for which there is an
    in-scope schema).
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-indent</admin:select>
        <admin:default>"default"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-indent</span>
         Specifies if typed XML (that is, XML for which there is an
         in-scope schema) should be pretty-printed (indented).  Valid
         values are <code>yes</code> or <code>no</code>.  This is like
         the "indent" option of both the XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="output-indent-untyped" type="yes-or-no">
    <xs:annotation>
      <xs:documentation>
       Pretty-print untyped XML (that is, XML for which there is no
       in-scope schema).
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-indent-untyped</admin:select>
        <admin:default>"default"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-indent-untyped</span>
         Specifies if untyped XML (that is, XML for which there is no
         in-scope schema) should be pretty-printed (indented).  Valid
         values are <code>yes</code> or <code>no</code>.  This is like
         the "indent-untyped" option of the MarkLogic XQuery
         <code>xdmp:output</code> prolog statement.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="output-media-type">
    <xs:annotation>
      <xs:documentation>
        A MIME content type name.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:token">
      <xs:pattern value="([0-9A-Za-z.+\-]+/[0-9A-Za-z.+\-]+)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="output-media-type" type="output-media-type">
    <xs:annotation>
      <xs:documentation>
      A mimetype representing a media type.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:default>""</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-media-type</span>
         A mimetype representing a media type. For example,
         <code>text/plain</code> or <code>text/xml</code> (or other
         valid mimetypes). This is like the "media-type" option of
         both the XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="output-normalization-form">
    <xs:annotation>
      <xs:documentation>
        A normalization token.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:NMTOKEN">
      <xs:enumeration value="none"/>
      <xs:enumeration value="NFC"/>
      <xs:enumeration value="NFD"/>
      <xs:enumeration value="NFKD"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="output-normalization-form" type="output-normalization-form">
    <xs:annotation>
      <xs:documentation>
      A Unicode normalization to be applied to serialized output.
      </xs:documentation>
      <xs:appinfo>
        <admin:select>output-normalization-form</admin:select>
        <admin:optional>true</admin:optional>
        <admin:default>"none"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
          <span class="help-text">
	  <span style="color:#800000">output-normalization-form</span>
           Valid values are <code>NFC</code>, <code>NFD</code>, and
           <code>NFKD</code>.  This is like the "normalization-form"
           option of both the XSLT <a
           href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
           instruction and the MarkLogic XQuery
           <code>xdmp:output</code> prolog statement.
          </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="output-omit-xml-declaration" type="yes-or-no">
    <xs:annotation>
      <xs:documentation>
      Omit the XML declaration in serialized output.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-omit-xml-declaration</admin:select>
        <admin:default>"default"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-omit-xml-declaration</span>
         Valid values are <code>yes</code> or <code>no</code>.  This
         is like the "omit-xml-declaration" option of both the XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
        </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="yes-or-no-or-omit">
    <xs:annotation>
      <xs:documentation>
       Nullable Boolean type, taking values "yes", "no", and "omit".
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:NMTOKEN">
      <xs:enumeration value="omit"/>
      <xs:enumeration value="yes"/>
      <xs:enumeration value="no"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="output-standalone" type="yes-or-no-or-omit">
    <xs:annotation>
      <xs:documentation>
      For a value of "yes" or "no", include "standalone=&lt;value&gt;" in the XML declaration; for a value of "omit", omit "standalone=".
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-standalone</admin:select>
        <admin:default>"omit"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-standalone</span>
         Valid values are <code>yes</code>, <code>no</code>, or
         <code>omit</code>.  This is like the "standalone" option of
         both the XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="output-undeclare-prefixes" type="yes-or-no">
    <xs:annotation>
      <xs:documentation>
      Undeclare the namespace prefix of any child element that does not bind the prefix of its parent element.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-undeclare-prefixes</admin:select>
        <admin:default>"default"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-undeclare-prefixes</span>
         Valid values are <code>yes</code> or <code>no</code>.  This
         is like the "undeclare-prefixes" option of both the XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="output-version">
    <xs:annotation>
      <xs:documentation>
        A version string.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:token"/>
  </xs:simpleType>

  <xs:element name="output-version" type="output-version">
    <xs:annotation>
      <xs:documentation>
       Optionally stipulate conformance to a specific version of the output method.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:default>""</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-version</span>
	 Valid values are <code>1.0</code> (for XML or XHTML) or
         <code>4.0</code> (for HTML).  This is like the "version"
         option of both the XSLT <a
         href="http://www.w3.org/TR/xslt20/#serialization"><code>xsl:output</code></a>
         instruction and the MarkLogic XQuery <code>xdmp:output</code>
         prolog statement.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="output-include-default-attributes" type="yes-or-no">
    <xs:annotation>
      <xs:documentation>
       Specifies whether attributes defaulted with a schema should be
    included in the serialization.
      </xs:documentation>
      <xs:appinfo>
        <admin:optional>true</admin:optional>
        <admin:select>output-include-default-attributes</admin:select>
        <admin:default>"default"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text">
	<span style="color:#800000">output-include-default-attributes</span>
         Serialized output includes default attributes.This is like
         the "include-default-attributes" option of the MarkLogic XQuery
         <code>xdmp:output</code> prolog statement.
        </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

</xs:schema>
