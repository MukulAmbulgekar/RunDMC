      </xs:documentation>
      <xs:appinfo>
        <admin:default>"ALL:!LOW:@STRENGTH"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
          <span class="help-text"><span style="color:#800000">xdqp-ssl ciphers</span>
            specifies the SSL ciphers that may be used.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

